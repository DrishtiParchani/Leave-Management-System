<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>admin_login</servlet-name>
        <servlet-class>pk.admin_login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>adddetails</servlet-name>
        <servlet-class>pk.adddetails</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>pk.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>takeleave</servlet-name>
        <servlet-class>pk.takeleave</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>takeleave_teacher</servlet-name>
        <servlet-class>pk.takeleave_teacher</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>admin_login</servlet-name>
        <url-pattern>/admin_login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>adddetails</servlet-name>
        <url-pattern>/adddetails</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>takeleave</servlet-name>
        <url-pattern>/takeleave</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>takeleave_teacher</servlet-name>
        <url-pattern>/takeleave_teacher</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>homepage.jsp</welcome-file>
    </welcome-file-list>
</web-app>
